---
import '@fontsource/ibm-plex-sans';

import '@fontsource-variable/open-sans';
---



<!--------------------------------------HTML----------------------------------------------->
<nav class="bg-gray-50 py-6 relative shadow-md">
    <div class="container mx-auto flex px-8 xl:px-0">
        <div class="flex flex-grow">
            <img class="h-8 md:h-8" src="../../public/images/short-logo.png" alt="">
            <h1 class="mx-3">Block Security Seguridad S.A</h1>
        </div>
        <div class="flex lg:hidden">
            <i class="ri-menu-line" onclick="openMenu();"></i>
        </div>
        <div id="menu" class="lg:flex hidden flex-grow justify-between">
            <div>
                <a href="#" class="lg:mr-7 hover:text-orange-400 transition duration-400 ease-in-out">Inicio</a>
                <a href="#" class="lg:mr-7 hover:text-orange-400 transition duration-400 ease-in-out">Clientes</a>
                <a href="#" class="lg:mr-7 hover:text-orange-400 transition duration-400 ease-in-out">Proveedores</a>
                <a href="#" class="lg:mr-7 hover:text-orange-400 transition duration-400 ease-in-out">Acerca de</a>
            </div>
            <div>
                <a href="#" class=" bg-white border border-orange-400 py-2.5 px-5 rounded-md hover:bg-amber-500 hover:text-white hover:border-amber-500
                transition duration-400 ease-in-out lg:mr-4">Iniciar sesión</a>
                <a href="#" class="text-white bg-orange-400 border border-orange-400 py-2.5 px-5 rounded-md hover:bg-orange-500 hover:border-orange-500
                transition duration-500 ease-in-out">Regístrate</a>
            </div>
        </div>
    </div>
</nav>

<script>
    function openMenu(){
        let menu = document.getElementById('menu');
        
        if(menu.classList.contains('hidden')){
            menu.classList.remove('hidden');
        } else {
            menu.classList.add('hidden');
        }
    }
</script>

<!--------------------------------------ESTILOS CSS----------------------------------------------->
<style>
*{
    font-weight: bold;
}
</style>