<!--------------------------------------SCRIPT----------------------------------------------->
<script>
    import Swiper from 'swiper';
    import 'swiper/css';
    import { Navigation } from "swiper/modules";
    import "swiper/css/navigation";

    import PhotoSwipeLightbox from 'photoswipe/lightbox';
    import 'photoswipe/style.css'

    // Configurar Photoswipe
    const lightbox = new PhotoSwipeLightbox({
        gallery: "#my-slider",
        children: 'a',
        pswpModule: () => import('photoswipe')
    })
    lightbox.init();

    // Configurar Swiper
    const swiper = new Swiper(".swiper", {
        modules: [Navigation], // Definir los módulos a usar
        loop: true,            // Definir el bucle para los slides
        
        // Hacer el slider Reactive
        slidesPerView: "auto",      // Agregar un número de slides en pantalla
        spaceBetween: 20,      // Separación de los slides en pixeles
        breakpoints: {
            // Cuando la pantalla es >= 768px
            768: {
                slidesPerView: 2,
                spaceBetween: 30
            },
            // Cuando la pantalla es >= 1024px
            1024:{
                slidesPerView: 3,
                spaceBetween: 40
            }
        },

        navigation: {          // Definir botones next y prev para Navigation
            prevEl: ".swiper-button-prev",
            nextEl: ".swiper-button-next"
        }
    });
</script>

<!--------------------------------------HTML----------------------------------------------->
<!-- CONTENEDOR PRINCIPAL DE SWIPER -->
<div class="swiper">
